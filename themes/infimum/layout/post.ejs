<div class="image-header" style="background-image: url(<%- page.featured -%>);"></div>
<div class="wrapper">
	<div class="info-header">
		<span class="date"><%- date(page.date)-%></span>
		<a class="home" href="<%-url_for('') -%>">všechny zápisky</a>
	</div>
	<article>
		<h1><%- page.title %></h1>
		<% if(page.excerpt){ %>
			<div class="excerpt">
				<%- page.excerpt %>
			</div>
			<%- page.more %>
		<% } else { %>
			<%- page.content %>
		<% } %>
	</article>

	<div class="tags">
		<% page.tags.each(function(tag){ %>
			<span>‹<a href="/<%- tag.path -%>"><%- tag.name %></a>›</span>
		<% }) %>
	</div>

	<div class="footer">
		<% if (page.prev){ %>
			<a href="<%- url_for(page.prev.path) %>" class="previous">předchozí zápisek</a>
		<% } %>
		<a class="home" href="<%-url_for('') -%>">všechny zápisky</a>
		<% if (page.next){ %>
			<a href="<%- url_for(page.next.path) %>" class="previous">další zápisek</a>
		<% } %>
	</div>
</div>
